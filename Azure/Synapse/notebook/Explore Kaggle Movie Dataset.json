				"source": [
					"val testMoviesList = movieDF.where($\"movie\".contains(\"Lost:\"))\n",
					"    .groupBy($\"movie\").count()\n",
					"    .where($\"count\" === 5)\n",
					"    .orderBy($\"movie\")\n",
					"    .limit(4)\n",
					"    .select($\"movie\")\n",
					"    .map(row => row.getString(0))\n",
					"    .collect()\n",
					"\n",
					"testMoviesList.map('\"' + _ +'\"')"
